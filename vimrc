let mapleader = ","

inoremap jk <Esc>

" set 8 lines to cursor
set so=5

set wildmenu
set number

set ruler
set cmdheight=1

set ignorecase
set smartcase
set hlsearch
set incsearch

set showmatch

set noerrorbells
set novisualbell

syntax enable
set encoding=utf8

set nobackup
set nowb
set noswapfile

set expandtab
set smarttab
set shiftwidth=4
set tabstop=4

set autoindent
"set smartindent
set wrap

set laststatus=2

nnoremap <silent> <leader><space> :noh<cr>
nnoremap <silent> <leader>n :set number!<cr>
nnoremap <silent> <leader>p :set paste!<cr>
